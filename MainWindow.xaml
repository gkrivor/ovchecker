<Window x:Class="OVChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OVChecker"
        mc:Ignorable="d"
        Title="OV Checker" Height="600" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" Closed="Window_Closed">
    <Grid>

        <TabControl x:Name="TabTools" Margin="10,6,10,10" SelectionChanged="TabTools_SelectionChanged">
            <TabItem Header="Environment" x:Name="TabEnv">
                <Grid>
                    <Label Content="Work dir:" HorizontalAlignment="Left" Height="27" Margin="10,6,0,0" VerticalAlignment="Top" Width="71"/>
                    <ComboBox x:Name="CBoxWorkDir" Margin="86,10,226,0" Text="" Height="20" VerticalAlignment="Top" ToolTip="Work Directory is used for looking up for executables, collecting build artifacts, attempts history, etc..." SelectionChanged="CBoxWorkDir_SelectionChanged"/>
                    <Button Content="Browse..." Margin="0,10,120,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="101" Click="ButtonWorkDirBrowse_Click"/>
                    <Button Content="Open in Explorer" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="105" Click="ButtonWorkDirOpen_Click"/>
                    <StackPanel Orientation="Vertical" Margin="10,38,10,10">
                        <Expander Header="Python" IsExpanded="True">
                            <Grid>
                                <ComboBox x:Name="CBoxPythonPath" Margin="10,10,10,0" VerticalAlignment="Top" SelectionChanged="CBoxPythonPath_SelectionChanged">
                                    <ComboBoxItem>Browse...</ComboBoxItem>
                                </ComboBox>
                                <CheckBox x:Name="CBUseVenv" Content="Use venv" IsEnabled="False" Margin="10,46,0,20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="105" ToolTip="Use a virtual environment to execute python's commands" IsChecked="False"/>
                                <GroupBox HorizontalAlignment="Left" Height="78" Header="PyPi Control" Margin="0,66,10,0" VerticalAlignment="Top" Width="742">
                                    <Grid Height="68">
                                        <CheckBox x:Name="CBPIPQuite" Content="Quite PIP tasks" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="105" ToolTip="Run python -m pip with -q flag" IsChecked="True"/>
                                        <Button Content="pip list" Margin="10,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="101" Uid="pip_list" Click="ButtonPipControl_Click"/>
                                        <Label Content="pip install " HorizontalAlignment="Left" Margin="128,27,0,0" VerticalAlignment="Top"/>
                                        <TextBox x:Name="TextPipInstall" HorizontalAlignment="Left" Margin="192,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="178"/>
                                        <Button Content="Run" Margin="375,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="57" Uid="pip_install" Click="ButtonPipControl_Click"/>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </Expander>
                        <Expander Header="OpenVINO" IsExpanded="True">
                            <Grid>
                                <ComboBox x:Name="CBoxOpenVINOPath" Margin="10,10,10,0" VerticalAlignment="Top" SelectionChanged="CBoxOpenVINOPath_SelectionChanged"/>
                                <Label Content="Download Wheel:" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.502,-0.233"/>
                                <TextBox x:Name="TextWheelURL" Margin="113,41,123,0" TextWrapping="Wrap" VerticalAlignment="Top" ToolTip="Enter URL of Wheel to download into Work Dir"/>
                                <Button x:Name="ButtonDownloadWheel" Content="Download" Margin="0,40,10,0" VerticalAlignment="Top" RenderTransformOrigin="0.314,0.602" HorizontalAlignment="Right" Width="108" Click="ButtonDownloadWheel_Click"/>
                            </Grid>
                        </Expander>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Model Checking" x:Name="TabChecks">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="230*" MinWidth="232"/>
                        <ColumnDefinition Width="Auto" MinWidth="256"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="64"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="48"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
                        <Grid>
                            <Label Content="Model:" HorizontalAlignment="Left" Height="27" Margin="10,6,0,0" VerticalAlignment="Top" Width="71"/>
                            <ComboBox x:Name="CBoxModelPath" Margin="86,10,226,0" Text="" Height="20" VerticalAlignment="Top" ToolTip="Model path points on exact model" SelectionChanged="CBoxModelPath_SelectionChanged" Grid.ColumnSpan="2"/>
                            <Button Content="Browse..." Margin="0,10,120,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="101" Click="ButtonBrowseModelPath_Click" Grid.Column="1"/>
                            <Button Content="Open folder..." Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="105" ToolTip="Opens model's folder in Windows Explorer" Click="ButtonOpenModelsFolder_Click" Grid.Column="1"/>
                            <Button Content="Select All" HorizontalAlignment="Left" Margin="10,38,0,0" Click="ButtonSelect_Click" Height="20" VerticalAlignment="Top" Width="64"/>
                            <Button Content="Select None" HorizontalAlignment="Left" Margin="79,38,0,0" Click="ButtonSelect_Click" Height="20" VerticalAlignment="Top" Width="72" Uid="None"/>
                            <Button Content="Reset status" HorizontalAlignment="Left" Margin="156,38,0,0" Click="ButtonSelect_Click" Height="20" VerticalAlignment="Top" Width="72" Uid="Status"/>
                        </Grid>
                    </StackPanel>
                    <ListView x:Name="ListViewChecks" Margin="0,3,5,2" Grid.Row="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding Selected}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Name">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Status">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding StatusIcon}" Width="16" Height="16"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Run">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Uid="{Binding GUID}" Click="ButtonSingleCheckRun_Click" ToolTip="Run only selected check">
                                                <Image Source="Resources/run.png" Width="16" Height="16"/>
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <CheckBox x:Name="CBFastFail" Margin="10,0,0,7" Content="Fast Fail" ToolTip="Stop after a first failed command, run everything otherwise" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="71" Grid.Row="2"/>
                    <Button HorizontalAlignment="Left" Margin="86,0,0,12" Click="ButtonRunSelected_Click" Height="20" VerticalAlignment="Bottom" Grid.Row="2">
                        <WrapPanel>
                            <Image Source="/Resources/run_m.png" Width="16" Height="16" Margin="0,0,6,0"/>
                            <TextBlock Text="Run Selected"/>
                        </WrapPanel>
                    </Button>
                    <GridSplitter Width="5" Grid.Row="1"/>
                    <Label Content="Customizations:" Margin="0,36,0,0" VerticalAlignment="Top" Grid.Row="0" HorizontalAlignment="Left" Width="94" Grid.Column="1"/>
                    <ListBox x:Name="ListChecksCustomizations" Margin="0,3,3,2" Grid.Row="1" Grid.Column="1"/>
                </Grid>
            </TabItem>
            <TabItem Header="Pytests" x:Name="TabPytests">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="230*" MinWidth="232"/>
                        <ColumnDefinition Width="Auto" MinWidth="256"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="96"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="48"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
                        <Grid>
                            <Label Content="Pytests:" HorizontalAlignment="Left" Height="27" Margin="10,6,0,0" VerticalAlignment="Top" Width="71"/>
                            <ComboBox x:Name="CBoxPytestsPath" Margin="86,10,226,0" Text="" Height="20" VerticalAlignment="Top" SelectionChanged="CBoxPytestsPath_SelectionChanged"/>
                            <Button Content="Browse file..." Margin="0,10,120,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="101" Click="ButtonBrowsePytestsPath_Click"/>
                            <Button Content="Browse folder..." Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="101" Click="ButtonBrowsePytestsFolder_Click"/>
                            <Button Content="Refresh List" Margin="0,38,120,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="101" Click="ButtonRefreshPytests_Click" ToolTip="Refresh list of tests using selected source and with applied -k filter if provided"/>
                            <Button Content="Open folder..." Margin="0,38,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="101" ToolTip="Open selected folder or folder with selected file"/>
                            <Button Content="Select All" HorizontalAlignment="Left" Margin="11,62,0,0" Height="20" VerticalAlignment="Top" Width="64" Click="ButtonSelectPytests_Click"/>
                            <Button Content="Select None" HorizontalAlignment="Left" Margin="157,62,0,0" Height="20" VerticalAlignment="Top" Width="72" Click="ButtonSelectPytests_Click" Uid="None"/>
                            <Button Content="Reset status" HorizontalAlignment="Left" Margin="80,62,0,0" Height="20" VerticalAlignment="Top" Width="72" Click="ButtonSelectPytests_Click" Uid="Status"/>
                            <Label Content="-k" HorizontalAlignment="Left" Margin="60,35,0,0" VerticalAlignment="Top" ToolTip="Pytest filtering"/>
                            <TextBox x:Name="TextPytestFilter" Margin="86,39,226,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
                        </Grid>
                    </StackPanel>
                    <ListView x:Name="ListViewPytests" Margin="0,0,5,10" Grid.Column="0" Grid.Row="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding Selected}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Name">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Status">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding StatusIcon}" Width="16" Height="16"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Run">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Uid="{Binding GUID}" Click="ButtonSinglePytestRun_Click" ToolTip="Run only selected check">
                                                <Image Source="Resources/run.png" Width="16" Height="16"/>
                                            </Button>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Label Content="Customizations:" Margin="0,65,0,0" VerticalAlignment="Top" Grid.Row="0" HorizontalAlignment="Left" Width="94" Grid.Column="1"/>
                    <GridSplitter Width="5" Grid.Row="1" Grid.Column="0"/>
                    <ListBox x:Name="ListPytestsCustomizations" Margin="0,0,0,10" Grid.Row="1" Grid.Column="1"/>
                    <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                        <Grid>
                            <CheckBox x:Name="CBFastFailPytests" Margin="10,0,0,7" Content="Fast Fail" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="71"/>
                            <Button HorizontalAlignment="Left" Margin="86,0,0,12" Height="20" VerticalAlignment="Bottom" Click="ButtonRunSelectedPytests_Click">
                                <WrapPanel>
                                    <Image Source="/Resources/run_m.png" Width="16" Height="16" Margin="0,0,6,0"/>
                                    <TextBlock Text="Run Selected"/>
                                </WrapPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="About">
                <Grid>
                    <Label Content="OV Checker" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="22" Margin="10,10,0,0"/>
                    <Label x:Name="LabelVersion" Content="Version: 1.0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,49,0,0"/>
                    <Button x:Name="ButtonNewVersion" Content="Available new version:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,101,0,0" Padding="5,0,5,0" Cursor="Hand" Uid="" Click="LinkButton_Click"/>
                    <Label Content="Author: Krivoruchko, Georgy" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"/>
                    <Button x:Name="ButtonBugReport" Content="Report a bug" ToolTip="Opens default mail agent to report a bug" Margin="0,41,125,0" VerticalAlignment="Top" Uid="mailto:landgraph@gmail.com?subject=[BUG] OV Checker" Click="LinkButton_Click" HorizontalAlignment="Right" Width="110"/>
                    <Button x:Name="ButtonFeatureRequest" Content="Request a feature" ToolTip="Opens default mail agent to make a feature request" HorizontalAlignment="Right" Margin="0,41,10,0" VerticalAlignment="Top" Width="110"  Uid="mailto:landgraph@gmail.com?subject=[FTR] OV Checker" Click="LinkButton_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Label x:Name="LabelUpdateProgress" Margin="0,6,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="Auto" ToolTip="New version is downloading, here is a downloading progress"/>
        <Button x:Name="ButtonUpdate" Margin="0,6,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="96" ToolTip="New version is available, press button to update" Click="ButtonUpdate_Click">
            <WrapPanel>
                <Image Source="/Resources/warning.png" Width="16" Height="16" Margin="0,0,6,0"/>
                <TextBlock Text="Update app"/>
            </WrapPanel>
        </Button>
    </Grid>
</Window>
