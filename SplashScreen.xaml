<Window x:Class="OVChecker.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OVChecker"
        mc:Ignorable="d"
        Title="SplashScreen" Height="240" Width="320" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Label Content="OV Checker" HorizontalAlignment="Left" Margin="145,10,0,0" VerticalAlignment="Top" FontSize="30"/>
        <Label x:Name="LabelStatus" Content="Starting..." HorizontalAlignment="Center" Margin="0,0,0,2" RenderTransformOrigin="0.137,-0.098" Width="320" Height="26" VerticalAlignment="Bottom" Background="{DynamicResource {x:Static SystemColors.MenuBarBrushKey}}"/>

    </Grid>
</Window>
