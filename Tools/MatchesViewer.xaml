<Window x:Class="OVChecker.Tools.MatchesViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OVChecker.Tools"
        mc:Ignorable="d"
        Title="MatchesViewer" Height="450" Width="800" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="71*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="289*"/>
            <ColumnDefinition Width="511*"/>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Top" Grid.ColumnSpan="2">
            <MenuItem Header="_File">
                <MenuItem x:Name="MnuOpen" Header="_Open..." Click="MnuOpen_Click"/>
                <Separator/>
                <MenuItem x:Name="MnuClose" Header="_Close" Click="MnuClose_Click"/>
            </MenuItem>
        </Menu>
        <ToolBar Height="32" VerticalAlignment="Top" Margin="-2,18,2,0" Grid.ColumnSpan="2">
            <Label Content="Filter passes: "/>
            <TextBox x:Name="TextFilter" Margin="0,2,0,3" Width="256" KeyUp="TextFilter_KeyUp"/>
            <Button Content="Filter" x:Name="BtnFilter" Click="BtnFilter_Click"/>
        </ToolBar>
        <TreeView x:Name="TreeViewMatches" Margin="0,0,5,0" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2"/>
        <GridSplitter Width="5" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"/>
        <RichTextBox x:Name="TextHighlight" Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        <GridSplitter Height="5" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Margin="0,142,0,235" Grid.RowSpan="2" Cursor="ScrollWE"/>
        <TextBox x:Name="TextSource" Grid.Row="2" Grid.Column="1" Margin="0,5,0,0" UndoLimit="0" IsUndoEnabled="False" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
